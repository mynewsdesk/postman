<div class="row">
    <div class="col-md-12">
        {{#if loading }}
            <div class="spinner">
                <div class="rect1"></div>
                <div class="rect2"></div>
                <div class="rect3"></div>
                <div class="rect4"></div>
                <div class="rect5"></div>
            </div>
        {{else}}
            <table class="table table-hover">
                <tr>
                    <th></th>
                    <th>Type of mail</th>
                    <th>Ip</th>
                    <th>Time</th>
                    {{#each attribute in customAttributes }}
                        <th>{{attribute}}</th>
                    {{/each}}
                </tr>
                {{#each event in controller}}
                    <tr>
                        <td class="text-center text-primary">
                            <i data-toggle="tooltip" {{bind-attr class="event.fontAwesome" title="event.tooltip"}}></i>
                        </td>
                        <td>{{event.category}}</td>
                        <td>{{event.ip}}</td>
                        <td>{{prettyDate event.timestamp}}</td>
                        {{#each attribute in event.filteredCustomAttributes }}
                            <td>{{attribute}}</td>
                        {{/each}}
                    </tr>
                {{/each}}
            </table>
        {{/if}}
    </div>
</div>
