<div class="row">
    <div class="col-md-12">
        <h2>{{ email }}</h2>
        {{#if not_found }}
            <div class="alert alert-warning">Email not found, check your spelling</div>
        {{/if}}
    </div>
    <div class="col-md-12">
        {{#if loading }}
            loading categories...
        {{else}}
            {{#unless not_found }}
                <ul class="nav nav-tabs">
                    {{#each category in categories}}
                        {{view Postman.NavView category=category}}
                    {{/each}}
                </ul>
            {{/unless}}
        {{/if}}
    </div>
</div>

{{outlet}}
